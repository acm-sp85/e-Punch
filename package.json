{
  "name": "ePunch",
  "description": "Build scripts for Heroku",
  "engines": {
    "node": "v16.13.1"
  },
  "scripts": {
    "build": "npm install --prefix client && npm run build --prefix client",
    "clean": "rm -rf public",
    "deploy": "cp -a client/build/. public/",
    "heroku-postbuild": "npm run clean && npm run build && npm run deploy"
  },
  "devDependencies": {
    "gh-pages": "^3.2.3"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "prisma": "^6.4.1",
    "react-scripts": "^5.0.1"
  }
}
